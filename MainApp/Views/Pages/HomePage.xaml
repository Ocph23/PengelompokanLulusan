<Page x:Class="MainApp.Views.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainApp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Home" Style="{StaticResource headerTitle}"></Label>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <StackPanel Margin="50">
                <Label Margin="0,20,0,0" FontSize="20" Height="auto" Content="PENGELOMPOKAN PRESTASI SISWA AKADEMIK" HorizontalAlignment="Center"></Label>
                <Label FontSize="20" Height="auto" Content="MAHASISWA FIKOM USTJ" HorizontalAlignment="Center"></Label>
            </StackPanel>
            <Image Source="/MainApp;component/images/ustj.png" Width="200" Margin="50"/>
           
        </StackPanel>
    </Grid>
</Page>
